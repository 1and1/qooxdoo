    "common-XXX" :
    {
      "let" :
      {
        "APPLICATION" : "demobrowser.demo",
        "LOCALES" : ["en", "en_US", "de", "de_DE", "fr", "fr_FR"]
      },
      
      "library" :
      [
        {
          "manifest" : "../../framework/Manifest.json"
        },

        {
          "manifest" : "Manifest.demo.json"
        }
      ],

      "include" :
      [
        "YYY",
        "qx.log.appender.Native",
        "qx.log.appender.Console",
        "qx.dev.ObjectSummary",
        "qx.dev.Pollution"
      ],

      "asset-let" :
      {
        "qx.icontheme" : ["Oxygen", "Tango"],
        "qx.theme"     : ["Classic", "Modern"]
      },

      "cache" :
      {
        "compile" : "${TMPDIR}/cache"
      },

      "settings" :
      {
        "qx.application" : "YYY",
        "qx.allowUrlVariants": "true",
        "qx.allowUrlSettings" : "true"
      }
    },

    "source-XXX" : 
    {
      "compile-options" :
      {
        "paths" :
        {
          "file"     : "source/script/YYY-${DTHEME}.js",
          "app-root" : "source/demo/yyy"
        },
        "code" :
        {
          "locales" : "${LOCALES}"
        }
      },
      
      "run" : ["source-XXX-Classic", "source-XXX-Modern"]    
    },

    "source-XXX-Classic" :
    {
      "extend" : ["common-XXX"],

      "let"    : {"DTHEME" : "qx.theme.Classic"},

      "include" : ["${DTHEME}"],

      "settings" : {"qx.theme": "${DTHEME}"},

      /*
      "compile-source" :
      {
        "file" : "source/script/YYY-${DTHEME}.js",
        "locales" : "${LOCALES}",
        "root" : "source/demo/yyy"
      }
      */
      
      "compile" : { "type" : "source" }
    },

    "source-XXX-Modern" :
    {
      "extend" : ["common-XXX"],

      "let"    : {"DTHEME" : "qx.theme.Modern"},

      "include" : ["${DTHEME}"],

      "settings" : {"qx.theme": "${DTHEME}"},

      /*
      "compile-source" :
      {
        "file" : "source/script/YYY-${DTHEME}.js",
        "locales" : "${LOCALES}",
        "root" : "source/demo/yyy"
      }
      */

      "compile" : { "type" : "source" }
    },

    "build-XXX" :
    {
        "run" : ["build-XXX-Classic", "build-XXX-Modern"]
    },

    "build-XXX-Classic" :
    {
      "extend" : ["common-XXX"],

      "let"    : {"DTHEME" : "qx.theme.Classic"},

      "include" : ["${DTHEME}"],

      "settings" : {"qx.theme": "${DTHEME}"},

      "variants" :
      {
        "qx.debug" : ["off"],
        "qx.aspects" : ["off"]
      },

      "compile-options" :
      {
        "paths" :
        {
          "file" : "build/script/YYY-${DTHEME}.js"
        },
        "uris" :
        {
          "script"  : "../../script",
          "resource" : "../../resource"
        },
        "code" :
        {
          "format"  : true,
          "locales" : "${LOCALES}",
          "optimize" : [ "variables", "basecalls", "strings", "privates" ]
        }
      },
      
      "compile" : { "type" : "build" }
    },

    "build-XXX-Modern" :
    {
      "extend" : ["common-XXX"],

      "let"    : {"DTHEME" : "qx.theme.Modern"},

      "include" : ["${DTHEME}"],

      "settings" : {"qx.theme": "${DTHEME}"},

      "variants" :
      {
        "qx.debug" : ["off"],
        "qx.aspects" : ["off"]
      },

      "compile-dist" :
      {
        "paths" :
        {
          "file" : "build/script/YYY-${DTHEME}.js"
        },
        "uris" :
        {
          "script"  : "../../script",
          "resource" : "../../resource"
        },
        "code" :
        {
          "format"  : true,
          "locales" : "${LOCALES}",
          "optimize" : [ "variables", "basecalls", "strings", "privates" ]
        }
      }
    }
