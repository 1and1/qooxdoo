// qooxdoo framework - config.json
{
  "include" :
  [
    {
      "path" : "../tool/data/config/application.json",      
      "as"   : "appconf"
    },
    {
      "path" : "image.json"
    }
  ],

  "let" :
  {
    "APPLICATION"  : "qx",
    "QOOXDOO_PATH" : ".",
    "QOOXDOO_URI"  : "../${QOOXDOO_PATH}",
    "CACHE"        : "../cache"
  },

  "jobs":
  {
    "publish-api" :
    {
      "shell" :
      {
        "command" : "rsync --checksum --compress --recursive --delete --inplace --links --safe-links --exclude .svn api/* root@qooxdoo.org:/var/www/qooxdoo/demo/0.8-rc1-pre/apiviewer"
      }
    },

    "publish-framework" :
    {
        "run" :
        [
            //"publish-test",
            "publish-api"
        ]
    },
    
    "test" :
    {
      "extend" : ["appconf::test"],
      
      "let" :
      {
        "LOCALES" : ["de", "de_DE"]
      }
    },
    
    "test-source" :
    {
      "extend" : ["appconf::test-source"],
      
      "let" :
      {
        "LOCALES" : ["de", "de_DE"]
      }
    },

    "machet" :
    {
      "run" : [ "image-clipping", "image-combine" ]
    },
    
    "api" :
    {
      "extend" : ["appconf::api"]
    },

    "clean" :
    {
      "extend" : ["appconf::clean"]
    },

    "distclean" :
    {
      "extend" : ["appconf::distclean"]
    },

    "fix" :
    {
      "extend" : ["appconf::fix"]
    },
    
    "lint" :
    {
      "extend" : ["appconf::lint"]
    },
    
    "translate" :
    {
      "extend" : ["appconf::translate"]
    }
  }
}
