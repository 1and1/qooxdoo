{
  "include" : 
  {
    "appconf": "../tool/data/config/application.json"
  },

  "jobs" :
  {
    "common" :
    {
      "let" :
      {
        "QOOXDOO_PATH" : "..",
        "QOOXDOO_URI"  : "../${QOOXDOO_PATH}"
      },

      "library" :
      [
        {
          "encoding" : "utf-8",
          "path"     : "${QOOXDOO_PATH}/framework/source",
          "uri"      : "${QOOXDOO_URI}/framework/source"
        }
      ],

      "settings" :
      {
        "qx.version" : "0.8"
      },

      "cache" :
      {
        "path" : "../cache"
      }
    },


    "api" :
    {
      "extend" : ["common", "appconf/jobs/api"],
      
      "let" :
      {
        "ROOT" : "../application/apiviewer",
        "BUILD_PATH" : "./api"
      },

      "library" :
      [
        {
          "encoding" : "utf-8",
          "path"     : "./source",
          "uri"      : "../../source"
        },

        {
          "encoding" : "utf-8",
          "path"     : "${ROOT}/source",
          "uri"      : "../source"
        }
      ],

      "settings" :
      {
        "qx.resourceUri" : "./resource"
      },

      "api_include" : ["qx.*"]   
    }
  }
}
