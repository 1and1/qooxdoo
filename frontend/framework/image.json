{
  // FRAMEWORK IMAGE CLIPPING AND COMBINING JOBS
  "jobs" :
  {
    "common" :
    {
      "let" :
      {
        "RESPATH" : "./source/resource",
        "MODERN" : "qx/decoration/Modern"
      },

      "cache" :
      {
        "path" : "../cache"
      }


    },


    "image-clipping" :
    {
      "extend" : ["common"],

      "slice-images" :
      {
        "images" :
        {
         // this is the input file
          "${RESPATH}/${MODERN}/source/button-checked-focused.png" :
          {
            "prefix" : "../form/button-checked-focused",
            "border-width" : 4
          },
          "${RESPATH}/${MODERN}/source/button-checked.png" :
          {
            "prefix" : "../form/button-checked",
            "border-width" : 4
          },
          "${RESPATH}/${MODERN}/source/button-preselected-focused.png" :
          {
            "prefix" : "../form/button-preselected-focused",
            "border-width" : 4
          },
          "${RESPATH}/${MODERN}/source/button-preselected.png" :
          {
            "prefix" : "../form/button-preselected",
            "border-width" : 4
          },
          "${RESPATH}/${MODERN}/source/button-pressed.png" :
          {
            "prefix" : "../form/button-pressed",
            "border-width" : 4
          },
          "${RESPATH}/${MODERN}/source/button-hovered.png" :
          {
            "prefix" : "../form/button-hovered",
            "border-width" : 4
          },
          "${RESPATH}/${MODERN}/source/button-focused.png" :
          {
            "prefix" : "../form/button-focused",
            "border-width" : 4
          },
          "${RESPATH}/${MODERN}/source/button.png" :
          {
            "prefix" : "../form/button",
            "border-width" : 4
          },
          // pane split
          "${RESPATH}/${MODERN}/source/pane.png" :
          {
            "prefix" : "../pane/pane",
            "border-width" : 6
          }
        }
      }
    },


    "image-combine" :
    {
      "extend" : ["common"],

      "combine-images" :
      {
        "images" :
        {
          // this is the output file
          "${RESPATH}/${MODERN}/button-tb-combined.png":
          {
            "input"  : 
            [ 
              "${RESPATH}/${MODERN}/form/button-*-[tb]*.png",
              "${RESPATH}/${MODERN}/form/button-[tb]*.png"
            ],
            "layout" : "vertical"
          },

          "${RESPATH}/${MODERN}/button-lr-combined.png":
          {
            "input"  : 
            [ 
              "${RESPATH}/${MODERN}/form/button-*-[lr].png",
              "${RESPATH}/${MODERN}/form/button-[lr].png"
            ],
            "layout" : "horizontal"
          },

          "${RESPATH}/${MODERN}/pane-tb-combined.png":
          {
            "input"  : 
              [
                "${RESPATH}/${MODERN}/pane/pane-t*.png",
                "${RESPATH}/${MODERN}/pane/pane-b*.png"
              ],
             "layout" : "vertical"
          },

          "${RESPATH}/${MODERN}/pane-lr-combined.png":
          {
            "input"  : 
              [
                "${RESPATH}/${MODERN}/pane/pane-[lr].png"
              ],
             "layout" : "horizontal"
          },

          "${RESPATH}/${MODERN}/checkradio-combined.png":
          {
            "input"  : 
              [
                "${RESPATH}/${MODERN}/form/checkbox-*.png", 
                "${RESPATH}/${MODERN}/form/radiobutton-*.png"
              ],
             "layout" : "horizontal"
          }
        }
      }
    }
  }
}
