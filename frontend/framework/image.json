{
  // FRAMEWORK IMAGE CLIPPING AND COMBINING JOBS
  "common" :
  {
    "let" :
    {
      "RESURI" : "${PWD}/resource",
      "MODERN" : "qx/decoration/Modern"
    }

  },

  "image-clipping" :
  {
    "extend" : ["common"],

    "slice-images" :
    {
      "images" :
      {
        "${RESURI}/${MODERN}/form/button-pressed.png" :
        {
          "prefix" : "button-pressed",
          "border-width" : 5
        }
      }
    }
  },

  "image-combine" :
  {
    "extend" : ["common"],

    "combine-images" :
    {
      "images" :
      [
       "${RESURI}/${MODERN}/form/button-tb-combined.png": {
          "input"  : [ "${RESURI}/${MODERN}/form/button-pressed-*.png"],
          "layout" : "horizontal"
       }
      ]
    }
  }
}
