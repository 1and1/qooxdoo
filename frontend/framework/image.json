{
  // FRAMEWORK IMAGE CLIPPING AND COMBINING JOBS
  "jobs" :
  {
    "common" :
    {
      "let" :
      {
        "RESURI" : "./source/resource",
        "MODERN" : "qx/decoration/Modern"
      },

      "cache" :
      {
        "path" : "../cache"
      }


    },


    "image-clipping" :
    {
      "extend" : ["common"],

      "slice-images" :
      {
        "images" :
        {
         // this is the input file
          "${RESURI}/${MODERN}/form/button-pressed.png" :
          {
            "prefix" : "button-pressed",
            "border-width" : 5
          }
        }
      }
    },


    "image-combine" :
    {
      "extend" : ["common"],

      "combine-images" :
      {
        "images" :
        {
          // this is the output file
          "${RESURI}/${MODERN}/form/button-tb-combined.png":
          {
             "input"  : [ "${RESURI}/${MODERN}/form/button-pressed-*.png"],
             "layout" : "horizontal"
          },

          "${RESURI}/${MODERN}/checkradio-combined.png":
          {
             "input"  : ["${RESURI}/${MODERN}/form/checkbox-*.png", "${RESURI}/${MODERN}/form/radiobutton-*.png"],
             "layout" : "horizontal"
          }
        }
      }
    }
  }
}
