// Showcase - config.json
{
  "include" :
  [
    {
      "path" : "../../tool/data/config/application.json",
      "as"   : "appconf" 
    }
  ],

  "jobs" :
  {
    "common" :
    {
      "let" :
      {
        "APPLICATION" : "showcase"
      },

      "cache" :
      {
        "path" : "../../cache"
      }
    },


    "common-builds" :  // this is for source/build versions
    {
      "extend"  : ["common"],

      "include" : ["showcase.*", "qx.theme.Classic", "qx.theme.Modern"],

      "settings" :
      {
        "qx.theme" : "qx.theme.Classic",
        "qx.resourceUri" : "${QOOXDOO_URI}/source/resource"
      },

      "localize" :
      {
        "locales" : ["de", "de_DE", "en", "en_US", "es", "es_ES", "fr", "fr_FR"]
      }
    },


    "source" :
    {
      "extend" : ["common-builds", "appconf/source"]
    },


    "build" :
    {
      "extend" : ["common-builds", "appconf/build"]
    },


    "api" :
    {
      "extend": ["common", "appconf/api"]
    }
  }
}
