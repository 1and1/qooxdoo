{
  "jobs" :
  {
    "common" : 
    {
      "let" :
      {
         "QOOXDOO_PATH" : "../.." ,
         "QOOXDOO_URI"  : "${QOOXDOO_PATH}/.." ,
         "APPLICATION_NAMESPACE" : "custom" 
      },

      "library" :
      [
        {
          "encoding" : "utf-8",
          "path"     : "${QOOXDOO_PATH}/framework/source",
          "uri"      : "${QOOXDOO_URI}/framework/source"
        },

        {
          "encoding" : "utf-8",
          "path"     : "./source",
          "uri"      : "../source"
        }
      ],

      "require" :
      {
        "qx.log.Logger" : ["qx.log.appender.Native"]
      },

      "settings" : 
      {
        "qx.application" : "${APPLICATION_NAMESPACE}.Application",
        "qx.resourceUri" : "${QOOXDOO_URI}/framework/source/resource"
      },

      "cache" :
      {
        "path" : "../../cache2"
      }
    },

    "source" : 
    {
      "extend" : ["common"],

      "source" :
      {
        "file" : "./source/script/${APPLICATION_NAMESPACE}.js"
      }
    }
  }
}
