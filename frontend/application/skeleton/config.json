{
  "jobs" :
  {
    "common" :
    {
      "let" :
      {
         "QOOXDOO_PATH" : "../.." ,
         "QOOXDOO_URI"  : "${QOOXDOO_PATH}/.." ,
         "APPLICATION" : "custom"
      },

      "library" :
      [
        {
          "manifest"     : "${QOOXDOO_PATH}/framework/Manifest.js",
          "uri"          : "${QOOXDOO_URI}/framework"
        },

        {
          "manifest"     : "Manifest.js",
          "uri"          : ".."
        }
      ],

      "settings" :
      {
        "qx.application" : "${APPLICATION}.Application",
        "qx.resourceUri" : "${QOOXDOO_URI}/framework/source/resource"
      },

      "include" :
      [
        "${APPLICATION}.Application",
        "qx.theme.Classic"
      ],

      "cache" :
      {
        "path" : "../../cache"
      }
    },

    "source-script" :
    {
      "extend" : ["common"],

      "script" :
      {
        "file" : "./source/script/${APPLICATION}.js"
      }
    },

    "source" :
    {
      "run" :
      [
        "source-script"
      ]
    },

    "build-script" :
    {
      "extend" : ["common"],

      "compile" :
      {
        "file" : "./build/script/${APPLICATION}.js",
        "uri"  : "script/${APPLICATION}.js"
      }
    },

    "build-files" :
    {
      "extend" : ["common"],
      "copy-files" :
      {
        "files" :
        [
          "index.html"
        ]
      }
    },

    "build" :
    {
      "run" :
      [
        "build-files",
        "build-script"
      ]
    }
  }
}
