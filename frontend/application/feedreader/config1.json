{
  "include" :
  [
		{
    	"path" : "../../tool/data/config/application.json",
			"as"   : "appconf" 
		}
  ],

	"let" :
	{
		"CACHE"       : "../../cache",
		"APPLICATION" : "feedreader"
	},

  "jobs" :
  {
    "defaults" :
    {
      "let" :
      {
				"APPLICATION" : "feedreader"
      },

      "settings" :
      {
        "qx.theme" : "qx.theme.Modern"
      },

      "localize" :
      {
        "locales" : [ "en" ]
      },

      "cache" :
      {
        "path" : "../../cache"
      }
    }
  }
}
