{
  "include" :
  [
    {
      "path" : "../../tool/data/config/application.json",
      "as"   : "appconf" 
    }
  ],

  "let" :
  {
    "CACHE"       : "../../cache",
    "APPLICATION" : "feedreader"
  },

  "jobs" :
  {
    "pretty" :
    {
      "cache" : { "path" : "${CACHE}" }, 

      "include" : [ "=${APPLICATION}.*" ],

      "library" : [ 
        { 
          "manifest" : "./Manifest.json",
          "uri"      : ".."
        }
      ],

      "pretty-print" :
      {
        "general" :
        {
          "indent-string"                   : "\t"
        },
        "comments" :
        {
          "trailing" :
          {
            "keep-column"                   : true,
            "comment-cols"                  : [50, 70, 90],
            "padding"                       : "  "
          }
        },
        "blocks" : 
        {
          "align-with-curlies"              : true,
          "open-curly" :
          {
            "newline-before"                : "m",
            "indent-before"                 : true
          }
        }
      }
    }
  }
}
