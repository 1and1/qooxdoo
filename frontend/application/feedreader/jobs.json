{
  "common" : 
  {
    "let" :
    [
      ["APPLICATION_NAMESPACE", "feedreader"],
      ["QOOXDOO_PATH", "../.."]
    ],

    "library" :
    [
      {
        "encoding" : "utf-8",
        "path"     : "../../framework/source",
        "uri"      : "../../../framework/source"
      },

      {
        "encoding" : "utf-8",
        "path"     : "./source",
        "uri"      : "../source"
      }
    ],

    "include" : ["feedreader.*", "qx.theme.Ext"],

    "require" :
    {
      "qx.log.Logger" : ["qx.log.appender.Native"]
    },

    "settings" : 
    {
      "qx.application" : "feedreader.Application",
      "qx.resourceUri" : "../../../framework/source/resource"
    },

    "cache" :
    {
      "path" : "../../cache2"
    }
  },


  "source" : 
  {
    "extend" : ["common"],

    "source" :
    {
      "file" : "./source/script/feedreader.js"
    }
  },


  "build" : 
  {
    "extend" : ["common"],

    "compile" :
    {
      "file" : "./build/script/${APPLICATION_NAMESPACE}.js"
    }
  },


  "api-data" : 
  {
    "extend" : ["common"],

    "api" :
    {
      "path" : "./api/script"
    }
 
  },


  "api-build" : 
  {
    "extend" : ["common"],

    "library" :
    [
      {
        "encoding" : "utf-8",
        "path"     : "../../framework/source",
        "uri"      : "../../../framework/source"
      },

      {
        "encoding" : "utf-8",
        "path"     : "${QOOXDOO_PATH}/application/apiviewer/source",
        "uri"      : "../${QOOXDOO_PATH}/application/apiviewer/source"
      }
    ],

    "include" : ["apiviewer.Application", "qx.theme.ClassicRoyale"],

    "settings" : 
    {
      "qx.application" : "apiviewer.Application",
      "qx.resourceUri" : "${QOOXDOO_PATH}/framework/source/resource",
      "qx.minLogLevel" : "700",
      "qx.theme" : "qx.theme.ClassicRoyale",
      "apiviewer.title" : "Generator2 API Viewer"
     },

    "variants" :
    {
      "qx.debug" : ["off"]
    },

    "compile" :
    {
      "file" : "./api/script/apiviewer.js"
    }
  }
}
