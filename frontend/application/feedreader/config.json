// Feedreader - config.json
{
  "include" :
  {
    "appconf" : "../../tool/data/config/application.json"
  },

  "jobs" :
  {
    "common" :
    {
      "let" :
      {
        "APPLICATION"    : "feedreader"
      },

      "cache" :
      {
        "path" : "../../cache"
      }
    },


    "common-builds" :  // this is for source/build versions
    {
      "extend"  : ["common"],

      "include" : ["feedreader.*", "qx.theme.Classic"],

      "settings" :
      {
        "qx.legacy.theme"       : "qx.legacy.theme.Ext"
      },

      "localize" :
      {
        "locales" : ["en", "de", "es", "it"]
      }
    },


    "source" :
    {
      "extend" : ["common-builds", "appconf/jobs/source"]
    },


    "build" :
    {
      "extend" : ["common-builds", "appconf/jobs/build"]
    },


    "api" :
    {
      "extend": ["common", "appconf/jobs/api"]
    }
  }
}
