{
  "include" :
  {
    "appconf" : "../../tool/data/config/application.json"
  },


  "jobs" :
  {
    "common" :
    {
      "let" :
      {
        "APPLICATION" : "feedreader"
      },

      "cache" :
      {
        // use qooxdoo wide cache folder
        "path" : "../../cache"
      }
    },


    // this is for source/build versions
    "common-builds" :
    {
      "extend"  : ["common"],

      "include" : ["feedreader.Application"],

      "settings" :
      {
        "qx.theme" : "qx.theme.Modern"
      },

      "localize" :
      {
        // does not work yet correctly
        // "locales" : ["en", "de", "es", "it"]
        "locales" : [ "en" ]
      }
    },

    "profiling" :
    {
      "variants" :
      {
        "qx.aspects" : ["on"]
      },

      "require" :
      {
        "qx.Class" : [ "qx.core.Aspect", "qx.dev.Profile" ]
      }
    },


    "source" :
    {
      "extend" : ["common-builds", "appconf/source"]
    },


    "build" :
    {
      "extend" : ["common-builds", "appconf/build"]
    },


    "api" :
    {
      "extend": ["common", "appconf/api"]
    }
  }
}
