// Testrunner - config.json
{
  "include" :
  {
    "appconf": "../../tool/data/config/application.json"
  },

  "jobs" :
  {
    "common" :
    {
      "let" :
      {
        "APPLICATION"  : "testrunner",
        "QOOXDOO_PATH" : "../../framework",
        "QOOXDOO_URI"  : "../${QOOXDOO_PATH}"
      },

      "library" :
      [
        {
          "manifest" : "${QOOXDOO_PATH}/Manifest.json",
          "uri"      : "${QOOXDOO_URI}"
        },

        {
          "manifest" : "Manifest.json",
          "uri"      : ".."
        }
      ],

      "include" :
      [
        "${APPLICATION}.runner.Application",
        "qx.legacy.theme.ClassicRoyale"
      ],

      "settings" :
      {
        "qx.version" : "0.8-alpha1",
        "qx.application" : "${APPLICATION}.runner.Application"
      },

      "themes" :
      {
        "qx.icontheme" : ["Oxygen"],
        "qx.theme"     : ["Modern"]
      },

      "cache" :
      {
        "path" : "../../cache"
      }
    },


    "common-tests" :
    {
      "let" :
      {
        "QOOXDOO_PATH" : "../../framework"
      },

      "library" :
      [
        {
          "manifest" : "${QOOXDOO_PATH}/Manifest.json",
          "uri"      : "../../${QOOXDOO_PATH}"
        },

        {
          "manifest" : "Manifest.json",
          "uri"      : "../.."
        }
      ],

      "include" : ["testrunner.TestLoader", "testrunner.test.*"],

      "localize": 
      {
        "locales" : [ "en" ]
      },

      "cache" :
      {
        "path" : "../../cache"
      }
    },


    // -- source jobs ------------------------------------------

    "source-script" :
    {
      "extend" : ["common"],

      "script" :
      {
        "file" : "./source/script/${APPLICATION}.js"
      }
    },


    "source-tests" :
    {
      "extend" : ["common-tests"],

      "script" :
      {
        "file" : "./source/script/tests.js"
      }
    },


    "source" :
    {
      "run" :
      [
        "source-script",
        "source-tests"
      ]
    },


    // -- build jobs -------------------------------------------

    "build-files" :
    {
      "extend" : ["common"],

      "copy-files" :
      {
        "files" :
        [
          "index.html",
          "html"
        ],

        "target" : "build"
      }
    },


    "build-resources":
    {
      "extend" : ["common"],

      "include" :
      [
        "qx.legacy.theme.ClassicRoyale",
        "testrunner.*"
      ],

      "copy-resources" :
      {
        "target" : "build"
      }
    },


    "build-script" :
    {
      "extend" : ["common"],

      "compile" :
      {
        "target" : "build",
        "file" : "./build/script/${APPLICATION}.js",
        "uri"  : "script/${APPLICATION}.js"
      }
    },


    "build-tests" :
    {
      "extend" : ["common-tests"],

      "compile" :
      {
        "target" : "build",
        "file" : "./build/script/tests.js",
        "uri"  : "../script/tests.js"
      }
    },


    "build" :
    {
      "run" :
      [
        "build-resources",
        "build-files",
        "build-script",
        "build-tests"
      ]
    },


    // -- api --------------------------------------------------

    "api" :
    {
      "extend": ["common", "appconf/jobs/api"],

      "let" :
      {
        "ROOT" : "${QOOXDOO_PATH}/../application/apiviewer"
      }
    }
  }
}
