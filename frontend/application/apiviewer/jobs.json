{
  "common" :
  {
    "let" :
    [
      ["APPLICATION_NAMESPACE", "apiviewer"],
      ["QOOXDOO_PATH", "../.."],
      ["QOOXDOO_URI", "../${QOOXDOO_PATH}"]
    ],

    "library" :
    [
      {
        "encoding" : "utf-8",
        "path"     : "${QOOXDOO_PATH}/framework/source",
        "uri"      : "${QOOXDOO_URI}/framework/source"
      },

      {
        "encoding" : "utf-8",
        "path"     : "source",
        "uri"      : "../source"
      }
    ],

    "settings" :
    {
      "qx.application"  : "apiviewer.Application",
      "qx.resourceUri"  : "${QOOXDOO_URI}/framework/source/resource",
      "qx.legacy.theme" : "qx.legacy.theme.ClassicRoyale",
      "qx.version"      : "TODO"
    },

    "cache" :
    {
      "path" : "../../cache"
    }
  },






  "source" :
  {
    "extend" : ["common"],
    "include" : ["apiviewer.*","qx.legacy.theme.ClassicRoyale"],

    "settings" :
    {
      "apiviewer.resourceUri" : "./resource"
    },
    
    "source" :
    {
      "file" : "./source/script/apiviewer.js"
    }
  },


  "build" :
  {
    "extend" : ["common"],
    "include" : ["apiviewer.*","qx.legacy.theme.ClassicRoyale"],

    "settings" :
    {
      "apiviewer.resourceUri" : "./resource/apiviewer"
    },

    "compile" :
    {
      "file" : "./build/script/apiviewer.js",
      "uri"  : "script/apiviewer.js"
    }
  },







  "source-data" :
  {
    "extend" : ["common"],

    "include" : ["qx.*"],
    "exclude" : ["=qx.legacy.*"],

    "api" :
    {
      "path" : "source/script"
    }
  },


  "build-data" :
  {
    "extend" : ["common"],

    "include" : ["qx.*"],
    "exclude" : ["=qx.legacy.*"],
    
    "api" :
    {
      "path" : "build/script"
    }
  }
}
