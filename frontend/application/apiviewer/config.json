{
  "jobs" :
  {
    "common" :
    {
      "let" :
      {
        "ROOT"         : ".",
        "APPLICATION"  : "apiviewer",
        "QOOXDOO_PATH" : "../..",
        "QOOXDOO_URI"  : "../${QOOXDOO_PATH}",
				"API_INCLUDE"  : ["qx.*"],
				"API_EXCLUDE"  : [],
        "BUILD_PATH"   : "${ROOT}/build"
      },

      "library1" :
      [
        {
          "encoding" : "utf-8",
          "path"     : "${QOOXDOO_PATH}/framework/source",
          "uri"      : "${QOOXDOO_URI}/framework/source"
        },

        {
          "encoding" : "utf-8",
          "path"     : "${ROOT}/source",
          "uri"      : "../source"
        }
      ],

      "library" :
      [
        {
          "manifest" : "${QOOXDOO_PATH}/framework/Manifest.json",
          "uri"      : "${QOOXDOO_URI}/framework"
        },

        {
          "manifest" : "Manifest.json",
          "uri"      : ".."
        }
      ],

      "settings" :
      {
        "qx.application"  : "${APPLICATION}.Application",
        "qx.resourceUri"  : "${QOOXDOO_URI}/framework/source/resource",
        "qx.legacy.theme" : "qx.legacy.theme.ClassicRoyale",
        "qx.version"      : "TODO"
      },

      "cache" :
      {
        "path" : "../../cache"
      }
    },


    "source-script" :
    {
      "extend" : ["common"],
      "include" : ["${APPLICATION}.*","qx.legacy.theme.ClassicRoyale"],

      "settings" :
      {
        "${APPLICATION}.resourceUri" : "./resource"
      },

      "script" :
      {
        "file" : "./source/script/${APPLICATION}.js"
      }
    },


    "source" :
    {
      "run" : 
      [ 
        "source-script",
        "source-data"
      ]
    },


    "build-script" :
    {
      "extend" : ["common"],
      "include" : ["${APPLICATION}.*","qx.legacy.theme.ClassicRoyale"],

      "settings" :
      {
        "${APPLICATION}.resourceUri" : "./resource"
      },

      "compile" :
      {
        "file" : "${BUILD_PATH}/script/${APPLICATION}.js",
        "format" : "on",
        "uri"  : "script/${APPLICATION}.js"
      }
    },


    "build-files" :
    {
      "extend" : ["common"],

      "copy-files" :
      {
        "files" :
        [
          "index.html"
        ],

        "target" : "${BUILD_PATH}",
        "source" : "${ROOT}/source"
      }
    },


    "build-resources":
    {
      "extend" : ["common"],

      "copy-resources" :
      {
        "target" : "${BUILD_PATH}"
      }
    },


    "build" :
    {
      "run" : 
      [ 
        "build-resources", 
        "build-script", 
        "build-files",
        "build-data"
      ]
    },


    "source-data" :
    {
      "extend" : ["common"],

      "include" : "${API_INCLUDE}",
      "exclude" : "${API_EXCLUDE}",

      "api" :
      {
        "path" : "source/script"
      }
    },


    "build-data" :
    {
      "extend" : ["common"],

      "include" : "${API_INCLUDE}",
      "exclude" : "${API_EXCLUDE}",

      "api" :
      {
        "path" : "${BUILD_PATH}/script"
      }
    }
  }
}

