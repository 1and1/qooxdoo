{
  "let" :
  {
    "APPLICATION"  : "bom",
    "QOOXDOO_PATH" : "${REL_QOOXDOO_PATH}",
    "QOOXDOO_FRAMEWORK" : "$${QOOXDOO_PATH}/framework",
    "ROOT"         : "."
  },

  "export" : [ "build" ],

  "jobs" :
  {
    "build" :
    {
      "run" : ["compile", "merge"]
    },

    "compile" :
    {
      "library" :
      [
        {
          "manifest" : "$${QOOXDOO_FRAMEWORK}/Manifest.json",
          "uri" : ".."          
        }
      ],

      "cache" :
      {
        "path" : "./cache"
      },

      "include" : 
      [
        "qx.bom.Element",
        "qx.bom.element.*",
        "qx.dom.*",
        "qx.event.handler.Keyboard",
        "qx.event.handler.Mouse"
      ],

      "variants" :
      {
        "qx.debug" : ["off"],
        "qx.aspects" : ["off"]
      },

      "compile-dist" :
      {
        "file" : "compile-bom.js",
        "target" : "build",
        "uri" : ".",
        "root" : "build",
        "optimize" : [ "variables", "basecalls", "privates", "strings" ]
      }
    },
    
    "merge" :
    {
      "shell" :
      {
        "command" : "python ./merge.py"
      }
    }   
  }
}
