{
  "let" :
  {
    "APPLICATION"  : "bom",
    "QOOXDOO_PATH" : "${REL_QOOXDOO_PATH}",
    "ROOT"         : "."
  },

  "export" : [ "build" ],

  "jobs" :
  {
    "build" :
    {
      "run" : ["compile", "merge"]
    },

    "compile" :
    {
      "library" :
      [
        {
          "manifest" : "$${QOOXDOO_PATH}/framework/Manifest.json",
          "uri" : ".."          
        }
      ],

      "cache" :
      {
        "path" : "./cache"
      },

      "include" : 
      [
        "qx.bom.Element",
        "qx.bom.element.*",
        "qx.dom.*",
        "qx.event.handler.Keyboard",
        "qx.event.handler.Mouse"
      ],

      "variants" :
      {
        "qx.debug" : ["off"],
        "qx.aspects" : ["off"]
      },

      "compile-dist" :
      {
        "paths" :
        {
          "file" : "compile-bom.js"
        },
        "uris" :
        {
          "script"   : ".",
          "resource" : "."
        },
        "code" :
        {
          "optimize" : [ "variables", "basecalls", "privates", "strings" ]
        }
      }
    },
    
    "merge" :
    {
      "shell" :
      {
        "command" : "python ./merge.py"
      }
    }   
  }
}
