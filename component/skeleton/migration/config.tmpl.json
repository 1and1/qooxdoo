{
  "name"    : "${Name}",

  "include" :
  [
    {
      "path" : "$${QOOXDOO_PATH}/tool/data/config/application.json",
      "as"   : "appconf"
    }
  ],

  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-full",
    "test",
    "test-source",
    "translation"
  ],

  "let" :
  {
    "APPLICATION"  : "${Namespace}",
    "QOOXDOO_PATH" : "${REL_QOOXDOO_PATH}",
    "QOOXDOO_FRAMEWORK" : "$${QOOXDOO_PATH}/framework",
    "QXTHEME"      : "qx.theme.Modern",
    "LOCALES"      : [ "en" ],
    "ROOT"         : "."
  },

  "jobs" :
  {
    "common" :
    {
      "include" : 
      [
        "$${QXTHEME}",
        "qx.legacy.theme.ClassicRoyale",
        "$${APPLICATION}.Application"
      ],
      "settings" :
      {
        "qx.legacy.theme" : "qx.legacy.theme.ClassicRoyale"
      }
    },

    "api" :
    {
      "extend" : ["appconf::api"]
    },

    "build" :
    {
      "extend" : ["common", "appconf::build"]
    },

    "clean" :
    {
      "extend" : ["appconf::clean"]
    },

    "distclean" :
    {
      "extend" : ["appconf::distclean"]
    },

    "fix" :
    {
      "extend" : ["appconf::fix"]
    },

    "lint" :
    {
      "extend" : ["appconf::lint"]
    },

    "migration" :
    {
      "extend" : ["appconf::migration"]
    },

    "pretty" :
    {
      "extend" : ["appconf::pretty"]
    },

    "publish" :
    {
      "extend" : ["appconf::publish"]
    },

    "source" :
    {
      "extend" : ["common", "appconf::source"]
    },

    "test" :
    {
      "extend" : ["appconf::test"]
    },

    "test-source" :
    {
      "extend" : ["appconf::test-source"]
    },

    "translation" :
    {
      "extend" : ["appconf::translation"]
    }
  }
}
