{
  "name"    : "${Name}",

  "include" :
  [
    {
      "path" : "$${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "simulation-build",
    "simulation-run",
    "source",
    "source-all",
    "source-each",
    "source-hybrid",
    "test",
    "test-source",
    "translation",
    "minify-css",
    "source-ios",
    "source-android",
    "build-ios",
    "build-android"
  ],
  
  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "${Namespace}",
    "APPLICATION_CSS" : "$${APPLICATION}/css/style.css",  // resource id of custom css
    "QOOXDOO_PATH" : "${REL_QOOXDOO_PATH}",
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${Cache}",
    "PLATFORM"     : "ios",  // provide a default
    "CSS_MINIFIED" : "$${BUILD_PATH}/resource/$${APPLICATION}/css/$${PLATFORM}-style-min.css",
    "ROOT"         : "."
  },

  "config-warnings" : 
  {
    "job-shadowing" : ["source-all-script", "build-files", "build-script", "source-script"]
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {
    // Uncomment the following entry to add a contrib or library to your
    // project; make sure to adapt the path to the Manifest.json; if you are
    // using a contrib: library, it will be downloaded into the path specified
    // by the 'cache/downloads' config key
    /*
    , "libraries" : 
    {
      "library" :
      [
        {
          "manifest" : "contrib://SkeletonApplication/trunk/Manifest.json"
        }
      ]
    },
    */

    "mobile-common" :
    {
      "=include" :
      [
        "$${APPLICATION}.Application"
      ],
      
      "environment" :
      {
        "qx.version"     : "${QOOXDOO_VERSION}",
        "qx.application" : "$${APPLICATION}.Application",
        "qx.mobile.emulatetouch" : true,
        "qx.mobile.nativescroll" : false,
        "engine.name" : "webkit"
      }
    },

    "source-ios" :
    {
      "extend" : ["source"],
      "let" : { "PLATFORM" : "ios" }
    },

    "source-android" :
    {
      "extend" : ["source"],
      "let" : { "PLATFORM" : "android" }
    },

    "build-ios" :
    {
      "extend" : ["build"],
      "let" : { "PLATFORM" : "ios" }
    },

    "build-android" :
    {
      "extend" : ["build"],
      "let" : { "PLATFORM" : "android" }
    },

    "source" :
    {
      "let" : { 
        "BUILD_TYPE" : "source",
        "BUILD_PATH" : "$${ROOT}/source"
      },
      "run" : ["minify-css"]
    },


    "build" :
    {
      "let" : { 
        "BUILD_TYPE" : "build",
        "BUILD_PATH" : "$${ROOT}/build-$${PLATFORM}" 
      },
      "=run" : ["build-resources", "build-files", "build-script", "minify-css"]
    },


    "source-script" :
    {
      "extend" : ["mobile-common"],
      "add-css" : [ { "uri" : "$${CSS_MINIFIED}" } ]
    },

    "build-script" :
    {
      "extend" : ["mobile-common"],
      "add-css" : [ { "uri" : "$${CSS_MINIFIED}" } ]
    },

    "build-files" :
    {
      "copy-files" :
      {
        "files" :
        [
          "index.html"
        ],

        "source" : "$${ROOT}/source/resource",
        "target" : "$${BUILD_PATH}"
      }
    },


    "source-all-script" :
    {
      "=exclude" : 
      [
        "qx.test.*",
        "$${APPLICATION}.test.*",
        "$${APPLICATION}.simulation.*"
      ]
    },

    "minify-css" :
    {
      "let" :
      {
        "CATCMD"     : "$${PYTHON_CMD} $${QOOXDOO_PATH}/tool/bin/cat.py",
        "CSSMIN_CMD" : "$${PYTHON_CMD} $${QOOXDOO_PATH}/tool/bin/cssmin.py"
      },

      "shell" :
      {
        "command" :
        [
          "$${CATCMD} $${QOOXDOO_PATH}/framework/source/resource/qx/mobile/css/common/main.css $${QOOXDOO_PATH}/framework/source/resource/qx/mobile/css/android/android.css $${ROOT}/source/resource/$${APPLICATION_CSS} | $${QOOXDOO_PATH}/tool/bin/cssmin.py > $${CSS_MINIFIED}",
          "$${CATCMD} $${QOOXDOO_PATH}/framework/source/resource/qx/mobile/css/common/main.css $${QOOXDOO_PATH}/framework/source/resource/qx/mobile/css/ios/ios.css $${ROOT}/source/resource/$${APPLICATION_CSS} | $${QOOXDOO_PATH}/tool/bin/cssmin.py > $${CSS_MINIFIED}"
        ]
      }
    }
  }
}
