{
  "name"    : "${Name}",

  "include" :
  [
    {
      "path" : "${REL_QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "let" :
  {
    "APPLICATION"  : "${Namespace}",
    "QOOXDOO_PATH" : "${REL_QOOXDOO_PATH}/framework",
    "QOOXDOO_URI"  : "../${REL_QOOXDOO_PATH}/framework",
    "QXTHEME"      : "${Namespace}.theme.Theme",
    "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
    "LOCALES"      : [ "en" ],
    "ROOT"         : "."
  }
}
