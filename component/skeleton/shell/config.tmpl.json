{
  "name"    : "${Name}",

  "include" :
  [
    {
      "path" : "$${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-hybrid",
    "test",
    "test-source",
    "translation"
  ],
  
  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "${Namespace}",
    "QOOXDOO_PATH" : "${REL_QOOXDOO_PATH}",
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${Cache}",
    "ROOT"         : "."
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {
    "shell-common" :
    {
      "library" :
      [
        {
          "manifest" : "$${QOOXDOO_PATH}/framework/Manifest.json",
          "uri" : ".."          
        }
      ],

      "extend" : [ "cache" ],
      
      "include" : 
      [
        "qx.Class",
        "qx.Mixin",
        "qx.Interface"
      ],
      
      "exclude" :
      [
        "qx.event.GlobalError"
      ],

      "environment" :
      {
        "qx.debug" : false,
        "qx.aspects" : false,
        "qx.globalErrorHandling" : false
      },

      "compile-options" :
      {
        "paths" :
        {
          "loader-template" : "resource/${Namespace}/rhino.loader_tmpl.js"
        },
        "uris" :
        {
          "script"   : ".",
          "resource" : "."
        }
      }
    },

    "common" :
    {
      "=include" :
      [
        "$${APPLICATION}.Application"
      ],
      
      "=environment" :
      {
        "qx.version"     : "${QOOXDOO_VERSION}",
        "qx.application" : "$${APPLICATION}.Application"
      }
    },

    "source-all-script" :
    {
      "=exclude" : 
      [
        "qx.test.*",
        "$${APPLICATION}.test.*"
      ]
    },

    "run" : 
    {
      "shell" : {
        "command" : "java -cp js.jar org.mozilla.javascript.tools.shell.Main $${BUILD}/script/${Namespace}.js
      }
    },

    "run-source" : {
      "extend" : ["run"],
      "let"    : { "BUILD" : "source" }
    },

    "run-build" : {
      "extend" : ["run"],
      "let"    : { "BUILD" : "build" }
    }
  }
}
